<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sms_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/numberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/enterNumber"
        android:layout_marginTop="250dp"
        android:textSize="30sp"/>
    <EditText
        android:id="@+id/smsNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="phone"
        android:hint="@string/enterNumber"
        android:inputType="phone"
        android:digits="0123456789+- ()"
        android:layout_below="@id/numberText"/>
    <Button
        android:id="@+id/sendSMSButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/smsNumber"
        android:text="@string/send_latest_order"/>

</RelativeLayout>